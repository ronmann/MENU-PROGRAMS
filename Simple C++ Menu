#include <iostream>
#include <string>
using namespace std;

int main()
{

	int User = 0;
	
	cout << "\t\t\t\t\tMENU1" << endl;
	cout << "\t\t\t\t\tMENU2" << endl;
	cout << "\t\t\t\t\tMENU3" << endl;
	cout << "\t\t\t\t\tMENU4" << endl;
	cout << "\t\t\t\t\tMENU5" << endl;
	
	cout << "\n\n\t\t\t\t\t";
	cout << "Enter the MENU Numer you want" << endl;
	
	cin >> User;
	
	switch(User)
	{
	case 1:
		cout << "You entered 1" << endl;
		break;
	case 2:
		cout << "You entered 2" << endl;
		break;
	case 3:
		cout << "You Entered 3" << endl;
		break;
	case 4:
		cout << "You Entered 4" << endl;
		break;
	case 5: 
		cout << "You Entered 5" << endl;
		break;
	default:
	cout << "SORRY TRY AGAIN" << endl;
	}
	
	if(User == 1)
	{
		cout << "ONE " << endl;
	}
	if(User == 2)
	{
		cout << "TWO" << endl;
	}
	if(User == 3)
	{
		cout << "THREE" << endl;
	}
	if(User == 4)
	{
		cout << "FOUR" << endl;
	}
	if(User == 5)
	{
		cout << "FIVE" << endl;
	}	
	
	return 0;
}
